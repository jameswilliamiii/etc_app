<%= content_for :title do %>
  Members of the Elgin Technology Center
<% end %>
<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <div class="row">
        <div class="large-6 medium-12 columns">
          <ul class="sub-nav profiles">
            <li><a href="#">All</a></li>
            <li><a href="#">Companies</a></li>
            <li class="active"><a href="#">Premier</a></li>
            <li><a href="#">Member</a></li>
          </dl>
        </div>
        <div class="large-5 large-offset-1 medium-6 columns left">
          <%= form_tag do %>
            <div class="row">
              <div class="small-8 columns">
                <%= text_field_tag :search, nil, placeholder: "search by name or skill" %>
              </div>
              <div class="small-4 columns">
                <%= submit_tag "Search", class: "postfix search button" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <div class="card-wrapper">
            <ul class="large-block-grid-2 small-block-grid-1">
              <% @profiles.each do |profile| %>
                <li>
                  <div class="card">
                    <div class="row">
                      <div class="small-4 columns profile-photo">
                        <%= link_to profile_url(profile) do %>
                          <%= image_tag "profile_pic_small.jpg", alt: "profile pic", class: "circular-profile-pic-small" %>
                        <% end %>
                        <div class="member-type">
                          <p>Premier</p>
                        </div>
                      </div>
                      <div class="small-8 columns">
                        <h5><%= link_to profile.name, profile_url(profile) %></h5>
                        <p class="company"><%= profile.company %></p>
                        <p>Member since: Dec 2013</p>
                        <p>
                          Skills:
                          <% profile.skill_list.first(4).each do |s| %>
                            <%= link_to s, profiles_url(skill: s) %><%= last_skill(s, profile.skill_list.first(4)) ? " ..." : "," %>
                          <% end %>
                        </p>
                        <%= link_to "Learn more", profile_url(profile) %>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <div class="pagination-centered">
            <ul class="pagination">
              <li class="arrow unavailable"><a href="">&laquo;</a></li>
              <li class="current"><a href="">1</a></li>
              <li><a href="">2</a></li>
              <li><a href="">3</a></li>
              <li><a href="">4</a></li>
              <li class="unavailable"><a href="">&hellip;</a></li>
              <li><a href="">12</a></li>
              <li><a href="">13</a></li>
              <li class="arrow"><a href="">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>