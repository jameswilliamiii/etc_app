<%= content_for :title do %>
  Elgin Technology Center Class Offerings
<% end %>
<%= content_for :og do %>
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:title" content="Elgin Technology Center Class Offerings" />
  <meta property="og:description" content="<%= @class_offers.count %> Upcoming Education Opportunities" />
  <meta property="og:image" content="https://d33z4cqleaobgx.cloudfront.net/assets/etc_logo.png" />
<% end %>
<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <div data-alert class="alert-box secondary">
        Is there a class that you think we should offer?  <%= link_to "Tell us", "mailto:info@elgintech.org" %> about it.
        <a href="#" class="close">&times;</a>
      </div>
      <h2><%= @class_offers.count %> Upcoming Education Opportunities</h2>
      <h5 class="subheader">
        <% if @class_offers.present? %>
          We are proud to offer the following education opportunities:
        <% else %>
          There are currently no classes open for registration.
        <% end %>
      </h5>
      <div class="classes">
        <% @class_offers.each do |class_offer| %>
          <div class="class-index-wrapper">
            <div class="row">
              <div class="small-12 columns">
                <h3 class="heavy"><%= link_to class_offer.name, class_url(class_offer) %> <span class="label <%= class_status(class_offer) %>"><%= class_offer.status.upcase %></span></h3>
                <h5 class="subheader class-question">Class Summary</h5>
                <h6 class="class-desc"><%= simple_format(h class_offer.summary.html_safe) %></h6>
                <h5 class="subheader class-question">Schedule</h5>
                <div class="class-desc">
                  <ul class="inline-list">
                    <%= class_schedule(class_offer) %>
                  </ul>
                </div>
                <br>
                <div class="show-links">
                  <%= link_to "LEARN MORE", class_url(class_offer) %>
                </div>
              </div>
            </div>
          </div>
          <% unless class_offer == @class_offers.last %>
            <div class="dotted-line"></div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>