<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <div class="row">
        <div class="medium-8 medium-centered columns">
          <h2>Forgot your password?</h2>
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :"data-abide" => "" }) do |f| %>
            <div>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, required: true, pattern: "email" %>
              <small class="error">Valid email is required</small>
              <% if resource.errors.include?(:email) %>
                <div class="errors">
                  <small class="error"><%= resource.errors.full_messages_for(:email).join(", ") %></small>
                </div>
              <% end %>
            </div>
            <div>
              <%= f.submit "Send me reset password instructions", class: "button radius success" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
