<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <div class="row">
        <div class="medium-8 medium-centered columns">
          <h2>Member Sign In</h2>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :"data-abide" => "" }) do |f| %>
            <div>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, required: true, pattern: "email" %>
              <small class="error">Valid email is required</small>
            </div>
            <div>
              <%= f.label :password %>
              <%= f.password_field :password, required: true %>
              <small class="error">A password is required</small>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div>
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div>
              <%= f.submit "Sign In", class: "button radius success" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>