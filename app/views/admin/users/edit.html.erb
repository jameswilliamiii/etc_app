<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <h2>Edit User Details</h2>
      <%= form_for @user, url: admin_user_url, html: { method: "patch", :"data-abide" => "" } do |f| %>
        <%= render 'layouts/admin_user_form', resource: @user, f: f %>
        <div class="row">
          <div class="medium-3 columns">
            <%= f.submit "Update User", class: "button radius success" %>
          </div>
          <div class="medium-3 columns end">
            <%= link_to "Delete User", admin_user_url(@user), class: "button radius alert", method: "delete", data: {confirm: "Are you sure you want to delete #{@user.name}?"} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>