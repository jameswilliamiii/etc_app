<div class="row">
  <div class="large-12 columns">
    <div class="wrapper">
      <div class="profile-breadcrumbs">
        <ul class="breadcrumbs">
          <li><%= link_to "All Users", admin_users_url %></li>
          <li class="unavailable"><%= @user.name %></li>
        </ul>
      </div>
      <div class="row">
        <div class="medium-4 large-3 columns">
          <div class="profile-photo">
            <%= image_tag "profile_pic_large.jpg", alt: "profile pic", class: "circular-profile-pic" %>
          </div>
          <div class="member-since">
            <p>Member since: <%= @user.member_since.strftime('%b %Y') %></p>
            <p>
              <%= link_to edit_admin_user_url(@user) do %>
                <%= fa_icon "edit" %> Edit User Info
              <% end %>
            </p>
          </div>
        </div>
        <div class="medium-8 large-9 columns">
          <div class="profile-details">
            <h1 class="name"><%= @user.name %></h1>
            <h2 class="company"><%= @user.membership_type.titleize %></h2>
            <p>Email: <%= link_to @user.email, "mailto:#{@user.email}" %></p>
            <p class="invitation-status">Invitation status: <%= invitation_status(@user) %></p>
            <p>Profile: <%= link_to(profile_url(@user.profiles.first), profile_url(@user.profiles.first)) if @user.profiles.present? %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>